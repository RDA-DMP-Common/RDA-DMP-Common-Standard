    "DMPData": {
      "$anchor": "DMPData",
      "type": "object",
      "title": "DMP",
      "description": "Provides high level information about the DMP, e.g. its title, modification date, etc. It is the root of this application profile. The majority of its fields are mandatory.",
      "properties": {
        "contact": {
          "$ref": "#/$defs/Contact"
        },
